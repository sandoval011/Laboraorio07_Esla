			</div>
			<!-- Content here-->

			<div class="container-fluid">
				<form action="/hoteles/<%= hotel._id %>/editar" method="POST" class="form-neon" autocomplete="off" onsubmit="return validateForm()">
					<fieldset>
						<legend><i class="fas fa-user"></i> &nbsp; Información básica</legend>
						<div class="container-fluid">
							<div class="row">
								<div class="col-12 col-md-6">
									<div class="form-group">
										<label for="cliente_dni" class="bmd-label-floating">Nombre del hotel</label>
										<input type="text" pattern="[a-zA-Z0-9-]{1,27}" class="form-control" id="name" name="name" value="<%= hotel.name %>" required maxlength="27">
									</div>
								</div>
								<div class="col-12 col-md-6">
									<div class="form-group">
										<label for="cliente_nombre" class="bmd-label-floating">Dirección</label>
										<input type="text" pattern="[a-zA-ZáéíóúÁÉÍÓÚñÑ ]{1,40}" class="form-control" value="<%= hotel.address %>" name="address" id="address" required  maxlength="40">
									</div>
								</div>
								<div class="col-12 col-md-4">
									<div class="form-group">
										<label for="cliente_apellido" class="bmd-label-floating">Valoración</label>
										<input type="number" pattern="[a-zA-ZáéíóúÁÉÍÓÚñÑ ]{1,40}" class="form-control" value="<%= hotel.rating %>" name="rating" id="rating" required maxlength="40">
									</div>
								</div>
								<div class="col-12 col-md-4">
									<div class="form-group">
										<label for="cliente_telefono" class="bmd-label-floating">Precio</label>
										<input type="number" pattern="[0-9()+]{1,20}" class="form-control" value="<%= hotel.price %>" name="price" id="price" required maxlength="20">
									</div>
								</div>
							</div>
						</div>
					</fieldset>
					<br><br><br>

					<p class="text-center" style="margin-top: 40px;">
						<button type="button" class="btn btn-raised btn-secondary btn-sm" onclick="window.location.href='/hoteles'"><i class="bi bi-x-circle-fill"></i> &nbsp; CANCELAR</button>
						&nbsp; &nbsp;
						<button type="submit" class="btn btn-raised btn-info btn-sm" onclick="return validateForm()"><i class="bi bi-pencil-square"></i> &nbsp; ACTUALIZAR</button>
					</p>
				</form>
			</div>	
		</section>
	</main>
	<script>
		var originalValues = {
			name: '<%= hotel.name %>',
			address: '<%= hotel.address %>',
			rating: '<%= hotel.rating %>',
			price: '<%= hotel.price %>'
		};
	
		function validateForm() {
			var formChanged = false;
	
			if (document.getElementById('name').value !== originalValues.name) {
				formChanged = true;
			}
			if (document.getElementById('address').value !== originalValues.address) {
				formChanged = true;
			}
			if (document.getElementById('rating').value !== originalValues.rating) {
				formChanged = true;
			}
			if (document.getElementById('price').value !== originalValues.price) {
				formChanged = true;
			}

			if (formChanged) {
				alert("¡El formulario se ha actualizado correctamente!");
				return true; 
			} else {
				alert("No se ha modificado ningún campo. No se puede actualizar.");
				return false;
			}
		}
	</script> 
	
