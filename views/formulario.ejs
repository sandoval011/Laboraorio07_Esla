	<script>
		function validarCampos() {
    // Obtener los valores de los campos
    var nombre = document.getElementById('name').value;
    var direccion = document.getElementById('address').value;
    var valoracion = document.getElementById('rating').value;
    var precio = document.getElementById('price').value;

    // Validar que todos los campos estén completos
    if (nombre === '' || direccion === '' || valoracion === '' || precio === '') {
        // Mostrar mensaje de error si algún campo está vacío
        alert('Por favor, complete todos los campos antes de guardar.');
        return false; // Evitar que el formulario se envíe
    }

    // Mostrar mensaje de éxito
    alert('Los datos se han guardado correctamente.');

    // Redirigir al usuario a la lista de hoteles
    window.location.href = '/hoteles';

    return true; // Permitir que el formulario se envíe
}

    </script>
	
